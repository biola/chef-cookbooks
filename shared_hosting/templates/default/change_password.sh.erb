#!/bin/bash
# This script collects user information and passes it to the change_password_expect.sh script

echo ""
echo "==================="
echo "  Update Password  "
echo "==================="
echo ""

read -p "Please enter your username: " username
read -s -p "Current password: " current_password
echo ""
read -s -p "New password: " new_password
echo ""
read -s -p "Confirm new password: " confirm_password
echo ""

if [ "$new_password" != "$confirm_password" ]; then
	echo "The passwords you entered do not match. Please try again."
	exit 1
fi

<%= node['shared_hosting']['change_password']['script_path'] %>/change_password_expect.sh $username "$current_password" "$new_password"