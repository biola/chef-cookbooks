from __future__ import with_statement
from fabric.api import *

env.hosts = [<%= @hosts.map{|h| "'#{h}'"}.join(',')  unless @hosts.empty? %>]

@runs_once
def test():
        local("sudo nginx -t")

@runs_once
def commit():
        test()
        local("git add -p && git commit && git push")

def deploy():
        with cd('/etc/nginx'):
                run("git pull")
                run("sudo nginx -t")
                run("sudo service nginx reload")