<%

name = @app[:name]
user = @app[:user] || name
require_path = @app[:require]
dir = "#{@app_root}/#{name}"

%>
# See sidekiq-all.conf for how to manage all Sidekiq instances at once.
#
# Manage sidekiq with:
#   sudo start sidekiq-<%= name %> index=0
#   sudo stop sidekiq-<%= name %>  index=0
#   sudo status sidekiq-<%= name %> index=0

description "Sidekiq Background Worker"

# no "start on", we don't want to automatically start
stop on (stopping sidekiq-all or runlevel [06])

# TODO: figure out a sure to run as
setuid <%= user %>
setgid <%= user %>

respawn
respawn limit 3 30

instance <%= name %>-${index}

script
  logger -t sidekiq "Starting process: <%= name %>-$index as <%= user %>"

  /bin/bash -l -c 'cd <%= dir %>; bundle exec sidekiq <%= "--require #{require_path}" if require_path %> --index $index -e <%= @environment %> --pidfile /tmp/sidekiq-<%= name %>-$index.pid --logfile /var/log/sidekiq/<%= name %>-$index.log'
end script